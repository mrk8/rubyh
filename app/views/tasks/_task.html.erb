<% if task.not_started? %>
 	<li id="<%= dom_id(task) %>" class="list-group-item clearfix"><%= task.title %> 
 		<div class="finish-pause-btns pull-right">
	 		<span class="start-btn"> <%= link_to "Start", task_path(task, status: Task::Status::STARTED), method: :patch, remote: true, class: "btn btn-primary btn-xs" %>
	 		</span> 
	 		<span class="pull-right"> <%= link_to "Destroy", task_path(task), method: :delete, remote: true, class: "btn btn-danger btn-xs" %>
		 	</span>
		</div>

 	</li>
<% elsif task.started? %>
	<li id="<%= dom_id(task) %>" class="list-group-item clearfix"><%= task.title %>
		<div class="finish-pause-btns pull-right">
			<span class="pull-right Finish"> <%= link_to "Finish", task_path(task, status: Task::Status::FINISHED), method: :patch, remote: true, class: "btn btn-primary btn-xs" %>
	 		</span> 
	 		<span class="pause-btn"> <%= link_to "Pause", task_path(task, status: Task::Status::NOT_STARTED), method: :patch, remote: true, class: "btn btn-warning btn-xs" %> 
	 		</span>  
 	</div>
 		
 	</li>
<% else %>
	<li id="<%= dom_id(task) %>" class="list-group-item clearfix"><%= task.title %>
		<div class="finish-pause-btns pull-right">
	 		<span class="reset-btn"> <%= link_to "Reset", task_path(task,status: Task::Status::NOT_STARTED), method: :patch, remote: true, class: "btn btn-warning btn-xs" %>
	 		</span>
	 		<span class="pull-right"> <%= link_to "Destroy", task_path(task), method: :delete, remote: true, class: "btn btn-danger btn-xs" %>
	 		</span>
	 	</div>

 	</li>

<% end %>


