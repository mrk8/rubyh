<% if task.not_started? %>
 	<li id="<%= dom_id(task) %>" class="list-group-item"><%= task.title %> 
 		<span class="pull-right"> <%= link_to "Start", task_path(task, status: Task::Status::STARTED), method: :patch, remote: true, class: "btn btn-primary btn-xs" %>
 		</span> 

 	</li>
<% elsif task.started? %>
	<li id="<%= dom_id(task) %>" class="list-group-item"><%= task.title %>
		<span class="pull-right"> <%= link_to "Finish", task_path(task, status: Task::Status::FINISHED), method: :patch, remote: true, class: "btn btn-primary btn-xs" %>
 		</span> 
 		<span class="pull-right"> <%= link_to "Pause", task_path(task, status: Task::Status::NOT_STARTED), method: :patch, remote: true, class: "btn btn-warning btn-xs" %> 
 		</span>  
 		
 	</li>
<% else %>
	<li id="<%= dom_id(task) %>" class="list-group-item"><%= task.title %>
 		<span class="pull-right"> <%= link_to "Reset", task_path(task,status: Task::Status::NOT_STARTED), method: :patch, remote: true, class: "btn btn-warning btn-xs" %>
 		</span>

 	</li>

<% end %>


